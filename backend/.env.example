# =============================================================================
# DATABASE CONNECTIONS
# =============================================================================
# You can configure databases using either:
# 1. ADO.NET-style connection strings (recommended for copying from .NET config)
# 2. Individual environment variables

# Default database to use (local, identity)
DEFAULT_DATABASE=local

# --- Option 1: ADO.NET Connection Strings ---
# Copy these directly from your .NET appsettings.json

# Local Database (ConcordDb_V5 - main database)
DB_LOCAL_CONNECTION_STRING=Data Source=10.8.0.1;Initial Catalog=ConcordDb_V5;Integrated Security=False;User ID=ef_migrator;Password=Grimm_jow92;Connect Timeout=330;Encrypt=False;TrustServerCertificate=True;ApplicationIntent=ReadWrite;MultiSubnetFailover=False;

# Identity Database (ConcordIdentityDb - auth)
DB_IDENTITY_CONNECTION_STRING=Data Source=10.8.0.1;Initial Catalog=ConcordIdentityDb;Integrated Security=False;User ID=ef_migrator;Password=Grimm_jow92;Connect Timeout=330;Encrypt=False;TrustServerCertificate=True;ApplicationIntent=ReadWrite;MultiSubnetFailover=False;

# --- Option 2: Individual Variables (legacy, for backward compatibility) ---
# These are used if DB_LOCAL_CONNECTION_STRING is not set

DB_DRIVER=ODBC Driver 17 for SQL Server
DB_HOST=localhost
DB_NAME=ConcordDb_V5
DB_USER=sa
DB_PASSWORD=1234
DB_TRUST_CERT=yes

# =============================================================================
# OLLAMA / LLM SETTINGS
# =============================================================================

OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5-coder:30b

# Optional: specialized model for SQL generation (leave empty to use OLLAMA_MODEL)
# Recommended: sqlcoder:15b for better SQL accuracy
OLLAMA_SQL_MODEL=

# =============================================================================
# QUERY SETTINGS
# =============================================================================

MAX_ROWS=200
REQUEST_TIMEOUT=90

# =============================================================================
# CORS SETTINGS
# =============================================================================

CORS_ORIGINS=http://localhost:5173

# =============================================================================
# SCHEMA & EXAMPLES
# =============================================================================

# Paths (leave empty for defaults in backend/schema/)
JOIN_RULES_PATH=
SCHEMA_VECTORS_PATH=
SQL_EXAMPLES_PATH=
SQL_EXAMPLES_EXTRACTED_PATH=

# SQL examples limits
SQL_EXAMPLES_MAX_CATEGORIES=8
SQL_EXAMPLES_MAX_PER_CATEGORY=12
SQL_EXAMPLES_MAX_TOTAL=80

# SQLite-based SQL index (experimental)
SQL_INDEX_ENABLED=0
SQL_INDEX_PATH=

# Table selection (vector + lexical)
TABLE_SELECTION_MAX_TABLES=8
TABLE_SELECTION_VECTOR_TOP_K=50
TABLE_SELECTION_VECTOR_MIN_SIMILARITY=0.2
TABLE_SELECTION_MIN_SCORE=0.25
